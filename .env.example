# Environment Variables Example
# Copy this file to .env.local and update the values

# App Configuration
VITE_APP_NAME=Your App Name
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=https://your-api.com
VITE_API_KEY=your-api-key

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# GitHub Pages (automatically set by GitHub Actions)
GITHUB_PAGES=false

# Surge.sh Configuration
SURGE_LOGIN=your-email@example.com
SURGE_TOKEN=your-surge-token

# Social Media
VITE_TWITTER_HANDLE=@yourusername
VITE_GITHUB_USERNAME=yourusername

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_SHOWCASE=true
